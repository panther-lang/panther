{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "./build.cmd",
      "windows": {
        "command": "./build.cmd"
      },
      "problemMatcher": "$msvc",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "dotnet",
      "windows": {
        "command": "dotnet"
      },
      "args": [
        "./bin/panther.dll",
        "src/compiler/syntax.pn",
        "src/compiler/scanner.pn",
        "src/compiler/ast.pn",
        "src/compiler/parser.pn",
        "src/compiler/program.pn "
      ],
      "problemMatcher": "$msvc",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
